
@{
    ViewData["Title"] = "Rcourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Register or update Courses </h1>
<br />

@using (Html.BeginForm("SaveC", "Cuorse", FormMethod.Post))
{
    <label for="id">ID</label>
    <br />
    <input type="hidden" name="id" value="@ViewBag.id" />
    <br />

    <label for="titulo"> Título del curso </label>
    <br>
    <input type="text" name="titulo" value="@ViewBag.titulo" required>
    <br>

    <label for="creditos">Creditos del curso</label>
    <br>
    <input type="text" name="creditos" value="@ViewBag.creditos" required>
    <br>

    <input type="submit" class="btn btn-success" />

}