@model Escuela.Dominio.Enrollment
@{ ViewData["Title"] = "Combobox";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<!DOCTYPE html>
<html>
<head>
    <title>Comboox</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">



</head>
<body>
    @using (Html.BeginForm("Save", "Enrollements", FormMethod.Get)) { 

     @Html.DropDownListFor(a => a.CourseId, new SelectList(ViewBag.estado, "Value", "Text"), "Select a course", new { @class = "form-control" })
    <br />
     @Html.DropDownListFor(a => a.StudentId, new SelectList(ViewBag.estadoStudents, "Value", "Text"), "Select a students", new { @class = "form-control" })
        <br />

     <label for="grade">Grado</label>
    <br />
    <input type="number" name="grade"  />
    <br />

    <input type="submit" />


    }
</body>
</html>
